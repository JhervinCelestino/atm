@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>🏦 ATM Main Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #0b2447, #159a9c);
            color: white;
            font-family: 'Arial', sans-serif;
            text-align: center;
            padding: 10px;
        }

        /* Menu Container */
        .menu-container {
            padding: 30px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(15px);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            max-width: 500px;
            width: 100%;
            text-align: center;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s ease-out, transform 0.5s ease-out;
        }

        /* Button Grid */
        .menu-buttons {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-top: 20px;
        }

        /* Buttons */
        .menu-btn {
            font-size: 18px;
            font-weight: bold;
            padding: 15px;
            border: none;
            border-radius: 10px;
            background: #1a5276; /* Dark Blue */
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 70px;
            width: 100%;
            transition: all 0.3s ease-in-out;
            box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.3);
        }

            .menu-btn:hover {
                background: #159a9c; /* Teal */
                transform: translateY(-3px);
            }

        /* Logout Link */
        .logout {
            display: block;
            margin-top: 20px;
            color: #ffcc00;
            font-weight: bold;
            text-decoration: none;
            transition: 0.3s;
        }

            .logout:hover {
                color: #ffffff;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="menu-container">
        <h2>🏦 ATM Main Menu</h2>

        <div class="menu-buttons">
            <a href="@Url.Action("WithdrawCash", "ATM")" class="btn menu-btn">💰 Withdraw Cash</a>
            <a href="@Url.Action("CheckBalance", "ATM")" class="btn menu-btn">💳 Check Balance</a>
            <a href="@Url.Action("TransferFunds", "ATM")" class="btn menu-btn">🔄 Transfer Funds</a>
            <a href="@Url.Action("ChangePin", "ATM")" class="btn menu-btn">🔑 Change PIN</a>
            <a href="@Url.Action("MiniStatement", "ATM")" class="btn menu-btn">📜 Mini Statement</a>
            <a href="@Url.Action("CashDeposit", "ATM")" class="btn menu-btn">📥 Cash Deposit</a>
        </div>

        <a href="@Url.Action("Logout", "ATM")" class="logout">🚪 Logout</a>
    </div>

    <script>
        // Trigger fade-in effect after page load
        document.addEventListener("DOMContentLoaded", function() {
            document.querySelector(".menu-container").style.opacity = "1";
            document.querySelector(".menu-container").style.transform = "translateY(0)";
        });
    </script>
</body>
</html>
