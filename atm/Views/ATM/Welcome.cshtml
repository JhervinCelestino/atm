@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>🏦 Welcome to ATM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #0b2447, #159a9c);
            color: white;
            font-family: 'Arial', sans-serif;
            text-align: center;
            padding: 10px;
        }

        /* Welcome Container */
        .welcome-container {
            padding: 30px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.4);
            max-width: 400px;
            width: 100%;
            opacity: 0;
            transform: scale(0.9);
            transition: opacity 0.5s ease-out, transform 0.5s ease-out;
        }

        /* Insert Card Button */
        .btn-insert {
            font-size: 18px;
            font-weight: bold;
            padding: 12px;
            border-radius: 8px;
            background: #ff7b00;
            color: white;
            text-decoration: none;
            display: inline-block;
            width: 100%;
            transition: all 0.3s ease-in-out;
            margin-top: 10px;
            box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.3);
        }

            .btn-insert:hover {
                background: #ff9c42;
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="welcome-container">
        <h1>🏦 Welcome to Our ATM</h1>
        <p>Please insert your card to continue.</p>
        <a href="@Url.Action("Login", "ATM")" class="btn-insert">💳 Insert Card</a>
    </div>

    <script>
        // Apply fade-in animation using JavaScript
        document.addEventListener("DOMContentLoaded", function () {
            let container = document.querySelector(".welcome-container");
            setTimeout(() => {
                container.style.opacity = "1";
                container.style.transform = "scale(1)";
            }, 100); // Delay to ensure animation runs smoothly
        });
    </script>
</body>
</html>
