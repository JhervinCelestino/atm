@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>📜 Mini Statement</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #0b2447, #159a9c);
            color: white;
            font-family: 'Arial', sans-serif;
            text-align: center;
            padding: 10px;
        }

        /* Statement Container */
        .statement-container {
            padding: 30px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(15px);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            max-width: 600px;
            width: 100%;
            text-align: center;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s ease-out, transform 0.5s ease-out;
        }

        /* Transaction List */
        .list-group {
            background: transparent;
        }

        .list-group-item {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: none;
            font-size: 18px;
            font-weight: bold;
            border-radius: 8px;
            margin-bottom: 8px;
            padding: 15px;
        }

            .list-group-item small {
                display: block;
                font-size: 14px;
                color: #ffcc00;
            }

        /* Back Button */
        .btn-back {
            font-size: 18px;
            font-weight: bold;
            padding: 12px;
            border-radius: 10px;
            background: #1a5276;
            color: white;
            text-decoration: none;
            display: inline-block;
            width: 100%;
            transition: all 0.3s ease-in-out;
            box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.3);
        }

            .btn-back:hover {
                background: #159a9c;
                transform: translateY(-3px);
            }
    </style>
</head>
<body>
    <div class="statement-container">
        <h2>📜 Transaction History</h2>
        <ul class="list-group">
            @if (ViewBag.Transactions != null && ViewBag.Transactions.Count > 0)
            {
                @foreach (var transaction in ViewBag.Transactions)
                {
                    <li class="list-group-item">
                        <strong>💰 @transaction.TransactionType:</strong> ₱@transaction.Amount <br />
                        <small>🕒 @transaction.TransactionDate.ToString("yyyy-MM-dd HH:mm:ss")</small>
                    </li>
                }
            }
            else
            {
                <li class="list-group-item">📭 No transactions found</li>
            }
        </ul>
        <a href="@Url.Action("MainMenu", "ATM")" class="btn-back">🔙 Back to Menu</a>
    </div>

    <script>
        // Smooth fade-in animation
        document.addEventListener("DOMContentLoaded", function() {
            document.querySelector(".statement-container").style.opacity = "1";
            document.querySelector(".statement-container").style.transform = "translateY(0)";
        });
    </script>
</body>
</html>
