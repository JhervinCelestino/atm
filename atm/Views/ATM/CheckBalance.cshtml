@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>💳 Check Balance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #0b2447, #159a9c);
            color: white;
            font-family: 'Arial', sans-serif;
            text-align: center;
            padding: 10px;
        }

        /* Balance Container */
        .balance-container {
            padding: 30px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(15px);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
            text-align: center;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s ease-out, transform 0.5s ease-out;
        }

        /* Balance Amount */
        .balance-amount {
            font-size: 32px;
            font-weight: bold;
            margin: 20px 0;
            color: #ffcc00;
        }

        /* Back Button */
        .btn-back {
            font-size: 18px;
            font-weight: bold;
            padding: 12px;
            border-radius: 10px;
            background: #1a5276;
            color: white;
            text-decoration: none;
            display: inline-block;
            width: 100%;
            transition: all 0.3s ease-in-out;
            box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.3);
        }

            .btn-back:hover {
                background: #159a9c;
                transform: translateY(-3px);
            }
    </style>
</head>
<body>
    <div class="balance-container">
        <h2>💳 Account Balance</h2>
        <p class="balance-amount">₱@ViewBag.Balance</p>
        <a href="@Url.Action("MainMenu", "ATM")" class="btn-back">🔙 Back to Menu</a>
    </div>

    <script>
        // Smooth fade-in animation
        document.addEventListener("DOMContentLoaded", function() {
            document.querySelector(".balance-container").style.opacity = "1";
            document.querySelector(".balance-container").style.transform = "translateY(0)";
        });
    </script>
</body>
</html>
