@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>🔐 ATM Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #0b2447, #159a9c);
            color: white;
            font-family: 'Arial', sans-serif;
            text-align: center;
            padding: 10px;
        }

        /* Login Container */
        .login-container {
            padding: 30px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.4);
            max-width: 400px;
            width: 100%;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s ease-out, transform 0.5s ease-out;
        }

        /* Input Fields */
        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            border-radius: 10px;
            padding: 10px;
        }

            /* Placeholder Styling */
            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
                font-weight: normal;
            }

        /* Login Button */
        .btn-login {
            font-size: 18px;
            font-weight: bold;
            padding: 12px;
            border-radius: 8px;
            background: #28a745;
            color: white;
            text-decoration: none;
            display: inline-block;
            width: 100%;
            transition: all 0.3s ease-in-out;
            margin-top: 10px;
            box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.3);
        }

            .btn-login:hover {
                background: #34d058;
                transform: scale(1.05);
            }

        /* Warning Message */
        .text-warning {
            font-weight: bold;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>🔐 ATM Login</h2>
        <form method="post">
            <input type="text" name="cardNumber" class="form-control mb-3" placeholder="💳 Card Number" required />
            <input type="password" name="pin" class="form-control mb-3" placeholder="🔑 PIN" required />
            <button type="submit" class="btn-login">➡️ Login</button>
        </form>
        <p class="text-warning mt-3">@ViewBag.Message</p>
    </div>

    <script>
        // Smooth fade-in animation
        document.addEventListener("DOMContentLoaded", function() {
            document.querySelector(".login-container").style.opacity = "1";
            document.querySelector(".login-container").style.transform = "translateY(0)";
        });
    </script>
</body>
</html>
