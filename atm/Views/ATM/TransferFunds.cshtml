@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>💸 Transfer Funds</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #0b2447, #159a9c);
            color: white;
            font-family: 'Arial', sans-serif;
            text-align: center;
            padding: 10px;
        }

        /* Transfer Container */
        .transfer-container {
            padding: 30px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(15px);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
            text-align: center;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s ease-out, transform 0.5s ease-out;
        }

        /* Input Fields */
        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            padding: 12px;
            border-radius: 8px;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

        /* Transfer Button */
        .btn-transfer {
            font-size: 18px;
            font-weight: bold;
            padding: 12px;
            border-radius: 10px;
            background: #1a5276;
            color: white;
            text-decoration: none;
            display: inline-block;
            width: 100%;
            transition: all 0.3s ease-in-out;
            box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.3);
            margin-top: 10px;
        }

            .btn-transfer:hover {
                background: #159a9c;
                transform: translateY(-3px);
            }

        /* Back Button */
        .btn-back {
            font-size: 16px;
            font-weight: bold;
            padding: 10px;
            border-radius: 8px;
            background: transparent;
            color: white;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease-in-out;
            margin-top: 15px;
        }

            .btn-back:hover {
                color: #ffcc00;
                transform: scale(1.1);
            }

        /* Warning Message */
        .text-warning {
            font-size: 16px;
            font-weight: bold;
            color: #ffcc00;
        }
    </style>
</head>
<body>
    <div class="transfer-container">
        <h2>💸 Transfer Funds</h2>

        <form method="post">
            <input type="text" name="recipientCardNumber" class="form-control mb-3" placeholder="📇 Recipient Card Number" required />
            <input type="number" name="amount" class="form-control mb-3" placeholder="💰 Amount" required min="100" step="100" />
            <button type="submit" class="btn-transfer">🔄 Transfer</button>
        </form>

        <p class="text-warning mt-3">@ViewBag.Message</p>
        <a href="@Url.Action("MainMenu", "ATM")" class="btn-back">🔙 Back to Menu</a>
    </div>

    <script>
        // Smooth fade-in animation
        document.addEventListener("DOMContentLoaded", function() {
            document.querySelector(".transfer-container").style.opacity = "1";
            document.querySelector(".transfer-container").style.transform = "translateY(0)";
        });
    </script>
</body>
</html>
