@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>₱ Cash Deposit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #0b2447, #159a9c);
            color: white;
            font-family: 'Arial', sans-serif;
            text-align: center;
            padding: 10px;
        }

        /* Deposit Container */
        .deposit-container {
            padding: 30px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(15px);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
            text-align: center;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s ease-out, transform 0.5s ease-out;
        }

        /* Balance Info */
        .balance-info {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 15px;
            color: #ffcc00;
        }

        /* Input Field */
        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            border-radius: 10px;
            padding: 10px;
        }

        /* Deposit Button */
        .btn-deposit {
            font-size: 18px;
            font-weight: bold;
            padding: 12px;
            border-radius: 8px;
            background: #28a745;
            color: white;
            text-decoration: none;
            display: inline-block;
            width: 100%;
            transition: all 0.3s ease-in-out;
            margin-top: 10px;
            box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.3);
        }

            .btn-deposit:hover {
                background: #34d058;
                transform: scale(1.05);
            }

        /* Back Button (Smaller) */
        .btn-back {
            font-size: 16px;
            font-weight: bold;
            padding: 10px;
            border-radius: 8px;
            background: #1a5276;
            color: white;
            text-decoration: none;
            display: inline-block;
            width: 50%;
            transition: all 0.3s ease-in-out;
            box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.3);
        }

            .btn-back:hover {
                background: #159a9c;
                transform: translateY(-3px);
            }
    </style>
</head>
<body>
    <div class="deposit-container">
        <h2>₱ Cash Deposit</h2>
        <p class="balance-info">💵 Current Balance: ₱@ViewBag.Balance</p>

        <form method="post">
            <input type="number" name="amount" class="form-control mb-3" placeholder="Enter deposit amount" required />
            <button type="submit" class="btn-deposit">💲 Deposit</button>
        </form>

        <p class="text-warning mt-3">@ViewBag.Message</p>
        <a href="@Url.Action("MainMenu", "ATM")" class="btn-back">🔙 Back to Menu</a>
    </div>

    <script>
        // Smooth fade-in animation
        document.addEventListener("DOMContentLoaded", function() {
            document.querySelector(".deposit-container").style.opacity = "1";
            document.querySelector(".deposit-container").style.transform = "translateY(0)";
        });
    </script>
</body>
</html>
